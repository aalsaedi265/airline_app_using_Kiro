{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
    },
    "Console": {
      "IncludeScopes": false
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=${POSTGRES_DB};Username=${POSTGRES_USER};Password=${POSTGRES_PASSWORD}",
    "Redis": "${REDIS_CONNECTION_STRING}"
  },
  "JwtSettings": {
    "Secret": "${JWT_SECRET}",
    "Issuer": "AirlineSimulationApi",
    "Audience": "AirlineSimulationApp",
    "ExpiryInHours": 24
  },
  "AviationStack": {
    "BaseUrl": "https://api.aviationstack.com/v1",
    "ApiKey": "${AVIATION_STACK_API_KEY}"
  },
  "OpenWeatherMap": {
    "BaseUrl": "https://api.openweathermap.org/data/2.5",
    "ApiKey": "${OPENWEATHER_API_KEY}"
  },
  "Notifications": {
    "SendGrid": {
      "ApiKey": "${SENDGRID_API_KEY}",
      "FromEmail": "noreply@airlinesimulation.com"
    },
    "Twilio": {
      "AccountSid": "${TWILIO_ACCOUNT_SID}",
      "AuthToken": "${TWILIO_AUTH_TOKEN}",
      "FromPhoneNumber": "+1234567890"
    }
  }
}